{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "hooks/useAuth.js", "app/auth/login/page.tsx", "app/auth/signup/page.tsx", "components/admin/AdminStatistics.tsx", "components/admin/AdminTags.tsx", "app/admin/page.tsx", "app/admin/organizations/[id]/page.tsx", "app/organization/volunteers/[id]/page.tsx"],
  "exclude": ["node_modules"]
}
